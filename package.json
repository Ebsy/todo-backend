{
  "name": "todo-backend",
  "version": "0.2.0",
  "description": "REST backend es6/babel/mongoose/jwt",
  "author": "Neil Ebrey <neil.ebrey@gmail.com>",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ebsy/todo-backend.git"
  },
  "scripts": {
    "start": "gulp serve",
    "start:debug": "cross-env DEBUG=todo-backend:* npm start",
    "docs": "documentation build server/** -f html -o docs",
    "build": "gulp",
    "lint": "esw *.js server config --color",
    "lint:watch": "npm run lint -- --watch",
    "precommit": "npm run lint && npm run test",
    "release": "standard-version",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "check-coverage": "npm run test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cookie-parser": "1.4.3",
    "cors": "^2.8.4",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "express-validation": "^1.0.2",
    "express-winston": "^2.4.0",
    "helmet": "^3.8.0",
    "http-status": "^1.0.1",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.1",
    "method-override": "^2.3.9",
    "mongoose": "^4.10.8",
    "morgan": "^1.8.2",
    "platform": "^1.3.4",
    "standard-version": "^4.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.0",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "del": "^3.0.0",
    "documentation": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.2",
    "gulp": "3.9.1",
    "gulp-babel": "6.1.2",
    "gulp-load-plugins": "^1.2.0",
    "gulp-newer": "^1.1.0",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-util": "^3.0.7",
    "husky": "^0.14.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^3.4.2",
    "run-sequence": "^2.0.0",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.6.1"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
